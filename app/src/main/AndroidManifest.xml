<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healthcare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity"/>

        <activity
            android:name=".DetailPatient"
            android:label="Détails Patient"
            android:parentActivityName=".ListPatient" />
        <activity
            android:parentActivityName=".HomeActivity"
            android:name=".ListPatient"
            android:label="Liste des patients"/>

        <activity
            android:name=".DetailMedecin"
            android:label="Détails Médecin "
            android:parentActivityName=".ListMedecin" />
        <activity
            android:parentActivityName=".HomeActivity"
            android:name=".ListMedecin"
            android:label="Liste des médecins"></activity>
        <activity
            android:name="com.example.login.CreerUnComptActivity"
            android:label="Création du compte" >

        </activity>
        <activity android:name="com.example.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>