<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.login.CreerUnComptActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"/>
    <LinearLayout

        android:id="@+id/type_compt_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous êtes ?"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="28sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/officialColor"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/medecin_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medecin"
                    android:textSize="24sp"
                    />
                <RadioButton
                    android:id="@+id/patient_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="Patient"/>
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:id="@+id/suivant"
            android:clickable="true"
            android:onClick="suivant"
            android:layout_width="120dp"
            android:paddingTop="8dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:textAllCaps="false"
            android:background="@color/officialColor"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_marginBottom="30dp"
            android:text="Suivant"/>

        <LinearLayout
            android:id="@+id/haveAccountlayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/haveAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous avez un compte ?"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/signintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:onClick="showSignInForm"
                android:text="Connectez-vous"
                android:textColor="@color/officialColor"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout

        android:id="@+id/inscription_layout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/info_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Entrez vos Informations de login"
                android:lineHeight="40dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:padding="4dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/mail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:hint="Entrez votre email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/passwd"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="18sp"
                android:hint="Entrez votre mot de passe"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/suivant_2"
                android:layout_width="120dp"
                android:onClick="continuer"
                android:clickable="true"
                android:paddingTop="8dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@color/officialColor"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:layout_marginBottom="40dp"
                android:text="Continuer"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/infos_personnelles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="300dp"

                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Entrez vos Informations Personnelles"
                android:lineHeight="40dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:padding="4dp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/nom"
                android:layout_width="300dp"
                android:hint="Entrez votre nom"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/prenom"
                android:layout_width="300dp"
                android:hint="Entrez votre prénom"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/date_naiss"
                android:layout_width="300dp"
                android:hint="Entrez votre Date de naissance"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:inputType="date"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="18sp"
                android:padding="10dp"
                android:hint="Entrez votre téléphone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/adresse"
                android:layout_width="300dp"
                android:hint="Entrez votre adresse"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/specialites_layout"
                android:visibility="gone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Choisir votre specialité"
                    android:textSize="18sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"/>

                <Spinner

                    android:id="@+id/specialites"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp" />


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/situations_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Choisir votre situation"
                    android:textSize="18sp"
                    android:paddingLeft="4dp"
                    android:paddingTop="10dp"/>

                <Spinner
                    android:id="@+id/situations"
                    android:layout_width="90dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />


            </LinearLayout>


            <Button
                android:id="@+id/signUp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Valider"
                android:onClick="valider"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="30dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonbg"
                android:textSize="20sp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>


</ScrollView>



