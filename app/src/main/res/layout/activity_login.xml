<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login.LoginActivity"
    android:orientation="vertical"
    android:background="#FFF">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/mail"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Enter Your Email address"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/passwd"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:ems="10"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Enter Your Password"
        />

    <Button
        android:id="@+id/signIn"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonbg"
        android:onClick="signIn"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="24sp" />
    <LinearLayout
        android:id="@+id/noAccountlayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/noAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account ?"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/signuptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:onClick="signupAct"
            android:text="Sign Up"
            android:textColor="@color/officialColor"
            android:textSize="18sp" />

    </LinearLayout>
    <Button
        android:id="@+id/signUp"
        android:visibility="gone"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonbg"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="24sp" />
    <LinearLayout
        android:id="@+id/haveAccountlayout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/haveAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have an account ?"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/signintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:onClick="signinAct"
            android:text="Sign In"
            android:textColor="@color/officialColor"
            android:textSize="18sp" />

    </LinearLayout>





</LinearLayout>
